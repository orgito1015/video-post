# Apify API token (https://console.apify.com/account/integrations)
APIFY_TOKEN=your_apify_token_here

# TikTok username to monitor (without the @ symbol)
TIKTOK_USERNAME=example_tiktok_user

# Facebook Page ID
FACEBOOK_PAGE_ID=your_facebook_page_id

# Facebook Page access token (long-lived, with pages_manage_posts and pages_read_engagement permissions)
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
